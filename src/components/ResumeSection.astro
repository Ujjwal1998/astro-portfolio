---
const { title, details } = Astro.props;
// console.log(details, "DETAIOL");
// details.map((item) => item.map((item) => console.log(item)));
---

<section>
  <div
    class="flex flex-col items-start justify-between dark:text-light sm:flex-row"
  >
    <h2 class="mt-16 w-[15rem]">{title}</h2>
    <div class="w-full">
      {
        details.map((item) => (
          <div class="my-16">
            <div class="flex flex-wrap items-start justify-between">
              <div>
                <h3 class="text-xl font-semibold">{item.title}</h3>
                <h3 class="text-xl font-semibold">{item.name}</h3>
              </div>
              <p class="dark:text-light mt-[0.3125rem] text-sm">
                {item.startDate} â€“ {item.endDate}
              </p>
            </div>
            <p class="text-darkblue dark:text-blue mt-3 text-sm">
              {item.location}
            </p>
            <ul class="mt-3 ml-6 xl:ml-0">
              {item.description.map((point, idx) => {
                console.log(item.description.length);
                return idx === item.description.length - 1 &&
                  title === "Experience" ? (
                  <li class="dark:text-light mb-2 list-disc underline">
                    <div>{point}</div>
                  </li>
                ) : (
                  <li class="dark:text-light mb-2 list-disc">{point}</li>
                );
              })}
            </ul>
          </div>
        ))
      }
    </div>
  </div>
</section>
