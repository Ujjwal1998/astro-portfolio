---
import { info } from "../data/info";
---

<section>
  <div
    class="mt-[0px] w-full mb-10 flex flex-wrap justify-between sm:mt-[141px]"
  >
    <div class="dark:text-light">
      <h2>{info.hero.subText}</h2>
      <h1 class="text-orange mt-4">{info.hero.name}</h1>
    </div>
    <div>
      <!-- <picture>
        <source />
        <img src="/public/android-chrome-512x512.png" alt="Ujjwal's avatar" />
      </picture> -->
    </div>
  </div>
</section>
<section>
  <!-- <div class=""> -->
  {info.hero.summary.map((p) => <p class="mb-1 dark:text-light">{p}</p>)}
  <!-- </div> -->
  <div class="mt-4">
    <a
      target="_blank"
      class="hover:text-orange dark:hover:text-orange dark:text-light border-2 p-2 rounded-lg"
      href={info.resumeUrl}
      ><svg
        xmlns="http://www.w3.org/2000/svg"
        width="18"
        height="18"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="feather feather-file-text inline-block"
        ><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"
